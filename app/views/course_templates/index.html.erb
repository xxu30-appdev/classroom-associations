<h1>
  All courses
</h1>

<a href="/courses/new">
  Add a new course
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>
    
    <th>
      Department
    </th>

    <th>
    </th>
  </tr>

  <% @courses.each do |course| %>
  <tr>
    <td>
      <%= course.id %>
    </td>

    <td>
      <%= course.title %>
    </td>
    
    <td>
      <%= course.department.name %>
    </td>

    <td>
      <a href="/courses/<%= course.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
